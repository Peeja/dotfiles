      <!-- Activate Google Chrome, using various profiles, via Alfred. -->
      <!-- Requires the custom Activate Chrome Profile workflow, which I'm not sure how best to distribute. -->
      <autogen>__KeyToKey__ KeyCode::K, KeyCode::F12, ModifierFlag::CONTROL_L | ModifierFlag::OPTION_L | ModifierFlag::COMMAND_L</autogen>
      <autogen>__KeyToKey__ KeyCode::KEY_0, KeyCode::F1, ModifierFlag::CONTROL_L | ModifierFlag::OPTION_L | ModifierFlag::COMMAND_L</autogen>
      <autogen>__KeyToKey__ KeyCode::KEY_9, KeyCode::F2, ModifierFlag::CONTROL_L | ModifierFlag::OPTION_L | ModifierFlag::COMMAND_L</autogen>
      <autogen>__KeyToKey__ KeyCode::KEY_8, KeyCode::F3, ModifierFlag::CONTROL_L | ModifierFlag::OPTION_L | ModifierFlag::COMMAND_L</autogen>

      <include path="includes/null_mapping.xml"/>
    </item>
    <item>
      <name>Holding [S+D] turns on "Speed Dial" mode</name>
      <identifier>remap.speeddial_sd</identifier>
      <autogen>__SimultaneousKeyPresses__ KeyCode::S, KeyCode::D, KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_private_speeddial</autogen>
    </item>
  </item>
