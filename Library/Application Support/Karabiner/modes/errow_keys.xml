<?xml version="1.0"?>
<root>
  <item>
    <name>ERrow Keys</name>
    <item>
      <name>Hold E and R, then use HJKL as arrow keys.</name>
      <appendix>Tab acts as Option for easy navigation by word.</appendix>
      <identifier vk_config="true">notsave.private.errowkeys</identifier>
      <autogen>__ShowStatusMessage__ ERrow Keys</autogen>

      <autogen>__KeyToKey__ KeyCode::H, KeyCode::CURSOR_LEFT</autogen>
      <autogen>__KeyToKey__ KeyCode::J, KeyCode::CURSOR_DOWN</autogen>
      <autogen>__KeyToKey__ KeyCode::K, KeyCode::CURSOR_UP</autogen>
      <autogen>__KeyToKey__ KeyCode::L, KeyCode::CURSOR_RIGHT</autogen>

      <autogen>__KeyToKey__ KeyCode::TAB, KeyCode::OPTION_L</autogen>

      <include path="includes/null_mapping.xml"/>
    </item>
    <item>
      <name>Holding [E+R] turns on "ERrow Keys" mode</name>
      <identifier>remap.errowkeys_er</identifier>
      <autogen>__SimultaneousKeyPresses__ KeyCode::E, KeyCode::R, KeyCode::VK_CONFIG_SYNC_KEYDOWNUP_notsave_private_errowkeys</autogen>
    </item>
  </item>
</root>
