[user]
  name = Peter Jaros
  email = peter.a.jaros@gmail.com
[core]
  excludesfile = ~/.gitexcludes
  attributesfile = ~/.gitattributes

[color]
  ui = auto

[alias]
  st = status
  c = commit --verbose
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  ap = add -p

  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  fa = fetch --all
  pom = push origin master
  b = branch

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  head = !git l -1
  h = !git head
  hp = "!source ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all

  ctags = !.git/hooks/ctags

  pr = "!git push Peeja HEAD -u && gh pull-request"
  clean-branches = "!git branch --merged master | grep -v master | xargs git branch -d"
  unpair = "!git config --unset user.name && git config --unset user.email"
  n = "!source ~/.githelpers && new_git_branch_from_origin_master"
  start = "!source ~/.githelpers && start_work_on_gh_issue"

  # Fetch and show new remote changes in submodules.
  whatsnew = "!source ~/.githelpers && git_whatsnew"

  trust   = "!mkdir .git/trusted"
  untrust = "!rmdir .git/trusted"

  wip   = "!git add -A && git commit --no-verify --message=WIP"
  unwip = "!source ~/.githelpers && git_unwip"

[merge]
  summary = true

[push]
  default = current

[init]
  templatedir = ~/.git_template

[web]
  browser = open
